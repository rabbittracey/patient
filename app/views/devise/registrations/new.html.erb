

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
      <form role="form">
        <h2>Please Sign Up <small class="text-info"> It's free and always will be. </small></h2>

        <h3 class="text-center"> basic infromation</h3>
        <hr class="colorgraph">
        <div class="row">
          <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="form-group">
              <input type="string" class="form-control input-lg" id="fname" placeholder="First Name" tabindex="1">
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="form-group">
              <input type="string" class="form-control input-lg" id="lname" placeholder="Last Name" tabindex="2">
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="form-group">
              <select type="string" class="form-control input-lg" id="prefix" tabindex="3">
              <option value=""><%= :Prefix %></option>
              <option value="<%= :Ms %>"><%= :Ms %></option>
              <option value="<%= :Miss %>"><%= :Miss %></option>
              <option value="<%= :Mrs %>"><%= :Mrs %></option>
              <option value="<%= :Mr %>"><%= :Mr %></option>
              <option value="<%= :Dr %>"><%= :Dr %></option>
              <option value="<%= :Prof %>"><%= :Prof %></option>
            </select>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="form-group">
              <select type="string" class="form-control input-lg" id="postfix"  tabindex="4">
              <option value=""><%= :Suffix %></option>
              <option value="Jr.">Jr.</option>
              <option value="Sr.">Sr.</option>
              <option value="M.D.">M.D.</option>
              <option value="Ph.D.">Ph.D.</option>
              <option value="II">II</option>
              <option value="III">III</option>
              <option value="IV">IV</option>
              </select>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="form-group">
              <select type="string" class="form-control input-lg" id="gender" tabindex="5">
                <option value=""><%= :Male %></option>
              <option value="<%= :Female %>"><%= :Female %></option>
              </select>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="form-group">
              <input type="date" class="form-control input-lg" id="dob" placeholder="Birth Day" tabindex="6">
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-12">
            <div class="form-group">
              <input type="string" class="form-control input-lg" id="home_address1" placeholder="Address" tabindex="7">
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="form-group">
              <input type="string" class="form-control input-lg" id="home_address2" placeholder="Address2" tabindex="8">
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="form-group">
              <select type="string" class="form-control input-lg" id="country" tabindex="9">
                <option value=""><%= :Country %></option>
                <option value="<%= :Afghanistan %>"><%= :Afghanistan %></option>
                <option value="<%= :Belgium %>"><%= :Belgium %></option>
                <option value="<%= :China %>"><%= :China %></option>
                <option value="United States">United States</option>
                
              </select>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-12">
            <div class="form-group">
              <input type="string" class="form-control input-lg" id="home_phone_number" placeholder="Mobile Phone Number" tabindex="10">
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-12">
            <div class="form-group">
              <input type="string" class="form-control input-lg" id="email" placeholder="Email Address" tabindex="11">
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-12">
            <div class="form-group">
              <input type="string" class="form-control input-lg" id="password" placeholder="Password" tabindex="12">
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-12">
            <div class="form-group">
              <input type="string" class="form-control input-lg" id="password" placeholder="Comfirm Password" tabindex="13">
            </div>
          </div>
        </div>

      </form>
    </div>
  </div>
</div>

<% end -%>
<%= render "devise/shared/links" %>
