





 
  <div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="text-center">
                <i class="fa fa-search-plus pull-left icon"></i>
                <h2>Medication Information</h2>
            </div>
            <hr>
            <div class="row">
                <div class="col-xs-12 col-md-6 col-lg-6 ">
                    <div class="panel panel-default height">
                          
                            <div class="panel-heading">Basic Information</div>

                                 <table class="table table-hover ">
    
                                        <tbody>
                                          <tr class="success">
                                            <td>Medication name:</td> 
                                            <td><%=@patientmedication.drug_name%></td>
                                          </tr>
                                          <tr class="danger">
                                            <td>Date Started:</td>  
                                            <td><%=@patientmedication.date_started%></td>                      
                                          </tr>
                                          <tr class="info">
                                            <td>Dosage:</td>  
                                            <td><%=@patientmedication.dosage%></td                                        
                                          </tr>
                                          <tr class="warning">
                                            <td>Frequency:</td>  
                                            <td><%=@patientmedication.frequency%></td                                        
                                          </tr>
                                          <tr class="danger">
                                            <td>Prescribed By:</td>  
                                            <td><%=@patientmedication.prescribed_by%></td                                        
                                          </tr>
                                        </tbody>
                                    </table>
                                    
                              
                    </div>
              </div>

                <div class="col-xs-12 col-md-6 col-lg-6">
                    <div class="panel panel-default height">
                        <div class="panel-heading">Reminder</div>
                        <div class="panel panel-default">
                          <div><%=@patientmedication.reminder%></div>
                         
                         </div>
                        
                    </div>
                </div>
            </div>
             <div class="row">
             	<div class="col-sm-2">
  	
                <%= link_to "Edit", edit_patient_medication_path(@patientmedication), class: "btn btn-block btn-primary" %>
            </div>
       <div class="col-sm-2">
          <%= link_to 'Delete', patient_medication_path(@patientmedication), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-block btn-danger"  %>
  	
      </div>
  
  <div class="col-sm-2">

     <%= link_to("Cancel", patient_medications_path, class: "btn btn-block btn-warning ") %>
  	
  </div>
             </div>
        </div>
    </div>
    


  
